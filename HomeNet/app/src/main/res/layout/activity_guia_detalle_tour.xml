<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.guia.GuiaDetalleTourActivity">

    <TextView
        android:id="@+id/tvPrecioGDT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="17dp"
        android:text="1000 COP"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/tvPrecioLabelGDT"
        app:layout_constraintTop_toBottomOf="@+id/tvCantidadLabelGDT" />

    <TextView
        android:id="@+id/tvPrecioLabelGDT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="17dp"
        android:text="@string/price"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imgCashGDT"
        app:layout_constraintTop_toBottomOf="@+id/tvCantidadLabelGDT" />

    <TextView
        android:id="@+id/tvDescripcionITGP2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque penatibus et magnis dis parturient montes, "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgTourGDT" />

    <TextView
        android:id="@+id/tvNombreGDT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Tour 1"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgTourGDT"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgCashGDT"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCantidadLabelGDT"
        app:srcCompat="@drawable/cash" />

    <TextView
        android:id="@+id/tvCapacidadGDT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="10 de 30"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/tvCantidadLabelGDT"
        app:layout_constraintTop_toBottomOf="@+id/tvDescripcionITGP2" />

    <TextView
        android:id="@+id/tvCantidadLabelGDT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="@string/quantity"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imgPersonsGDT"
        app:layout_constraintTop_toBottomOf="@+id/tvDescripcionITGP2" />

    <ImageView
        android:id="@+id/imgCalendarGDT"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/imgTourGDT"
        app:layout_constraintTop_toBottomOf="@+id/tvNombreGDT"
        app:srcCompat="@drawable/calendar_icon" />

    <TextView
        android:id="@+id/tvDateGDT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:text="01/01/2018"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imgCalendarGDT"
        app:layout_constraintTop_toBottomOf="@+id/tvNombreGDT" />

    <TextView
        android:id="@+id/tvHourGDT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="11:30"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imgClockGDT"
        app:layout_constraintTop_toBottomOf="@+id/tvDateGDT" />

    <TextView
        android:id="@+id/tvDurationGDT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="2 horas"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imgDurationGDT"
        app:layout_constraintTop_toBottomOf="@+id/tvHourGDT" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigationGDT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/guia_navigation" />

    <ImageView
        android:id="@+id/imgTourGDT"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mapsicon" />

    <ImageView
        android:id="@+id/imgClockGDT"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/imgTourGDT"
        app:layout_constraintTop_toBottomOf="@+id/imgCalendarGDT"
        app:srcCompat="@drawable/clock" />

    <ImageView
        android:id="@+id/imgDurationGDT"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/imgTourGDT"
        app:layout_constraintTop_toBottomOf="@+id/imgClockGDT"
        app:srcCompat="@drawable/duration" />

    <ImageView
        android:id="@+id/imgPersonsGDT"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDescripcionITGP2"
        app:srcCompat="@drawable/user" />

    <Button
        android:id="@+id/buttonRecorridoGDT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:background="@color/colorPrimaryDark"
        android:padding="8dp"
        android:text="@string/route"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/navigationGDT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>