<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"

    app:cardCornerRadius="4dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp">

        <ImageView
            android:id="@+id/ivImagenAlogAEA"
            android:layout_width="139dp"
            android:layout_height="139dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars[0]" />

        <TextView
            android:id="@+id/tvTipoAEA"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="Tipo Ubicacion"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivImagenAlogAEA"
            app:layout_constraintTop_toTopOf="@+id/ivImagenAlogAEA" />

        <TextView
            android:id="@+id/tvNombreAEA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Nombre"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/tvTipoAEA"
            app:layout_constraintStart_toStartOf="@+id/tvTipoAEA"
            app:layout_constraintTop_toBottomOf="@+id/tvTipoAEA" />

        <TextView
            android:id="@+id/tvUbicacionAEA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Ubicacion"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/tvNombreAEA"
            app:layout_constraintStart_toStartOf="@+id/tvNombreAEA"
            app:layout_constraintTop_toBottomOf="@+id/tvNombreAEA" />

        <TextView
            android:id="@+id/tvDescripcionAEA"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_marginTop="4dp"
            android:text="Descripcion 111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/tvUbicacionAEA"
            app:layout_constraintStart_toStartOf="@+id/tvUbicacionAEA"
            app:layout_constraintTop_toBottomOf="@+id/tvUbicacionAEA" />
    </android.support.constraint.ConstraintLayout>
</android.support.design.card.MaterialCardView>